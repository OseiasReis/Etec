<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.etecintents.oseias.appintents">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".IntentActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SaudacaoActivity"
            android:label="@string/title_activity_saudacao"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="com.etecintents.oseias.appintents.SaudacaoActivity" />
                <action android:name="saudacao.ACAO_EXIBIR_SAUDACAO" />
                <category android:name="saudacao.CATEGORIA_SAUDACAO" />
                <category android:name="saudacao.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>
